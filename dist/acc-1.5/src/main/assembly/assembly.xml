<assembly>
    <id>distribution</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <outputDirectory>${dist.accumulo.lib.ext}</outputDirectory>
            <includes>
                <include>geomesa:geomesa-distributed-runtime-acc-1.5:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${dist.hdfs}</outputDirectory>
            <includes>
                <include>geomesa:geomesa-distributed-runtime-acc-1.5:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${dist.geoserver.lib}</outputDirectory>
            <includes>
                <include>geomesa:geomesa-plugin-acc-1.5:*:geoserver-plugin</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>geomesa:geomesa-dist-common:tar.gz</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <outputFileNameMapping>/</outputFileNameMapping>
            <unpack>true</unpack>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${dist.dev}/lib</outputDirectory>
            <includes>
                <include>geomesa:geomesa-distributed-runtime-acc-1.5:*</include>
                <include>geomesa:geomesa-utils</include>
                <include>org.apache.accumulo:accumulo-core</include>
                <include>org.apache.accumulo:cloudtrace</include>
                <include>org.apache.thrift:libthrift</include>
                <include>org.apache.zookeeper:zookeeper</include>
                <include>org.apache.hadoop:hadoop-core</include>
                <include>org.apache.hadoop.thirdparty.guava:guava</include>
            </includes>
            <scope>test</scope>
        </dependencySet>
    </dependencySets>
</assembly>
