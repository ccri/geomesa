<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>geomesa</groupId>
        <artifactId>geomesa-plugin</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>geomesa-plugin-acc-1.4</artifactId>
    <name>GeoMesa Geoserver Plugin (WFS/WMS) for Accumulo 1.4</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <!-- environment-dependent versions -->
        <zookeeper.version>${zookeeper33.version}</zookeeper.version>
        <accumulo.version>${accumulo14.version}</accumulo.version>
        <hadoop.version>${hadoop1.version}</hadoop.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>geomesa</groupId>
            <artifactId>geomesa-plugin-common</artifactId>
        </dependency>
        <dependency>
            <groupId>geomesa</groupId>
            <artifactId>geomesa-core-acc-1.4</artifactId>
        </dependency>
        <dependency>
            <groupId>geomesa</groupId>
            <artifactId>geomesa-utils</artifactId>
        </dependency>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-library</artifactId>
        </dependency>

        <!-- provided dependencies -->
        <dependency>
            <groupId>org.apache.accumulo</groupId>
            <artifactId>accumulo-core</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.hadoop</groupId>
            <artifactId>hadoop-client</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.avro</groupId>
            <artifactId>avro</artifactId>
        </dependency>
        <dependency>
            <groupId>org.geoserver</groupId>
            <artifactId>gs-main</artifactId>
        </dependency>
        <dependency>
            <groupId>org.geoserver.web</groupId>
            <artifactId>gs-web-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createDependencyReducedPom>false</createDependencyReducedPom>
                            <minimizeJar>true</minimizeJar>
                            <shadedClassifierName>geoserver-plugin</shadedClassifierName>
                            <artifactSet>
                                <excludes>
                                    <exclude>org.geotools:*</exclude>
                                    <exclude>org.apache.*:*</exclude>
                                    <exclude>org.apache.commons.*:*</exclude>
                                    <exclude>com.bbn*:*</exclude>
                                    <exclude>org.geotiff:*</exclude>
                                    <exclude>com.sun.*:*</exclude>
                                    <exclude>thredds.*:*</exclude>
                                    <exclude>org.jdom:*</exclude>
                                    <exclude>org.quartz-scheduler:*</exclude>
                                    <exclude>com.mchange.*:*</exclude>
                                    <exclude>com.google.*:*</exclude>
                                    <exclude>com.sleepycat:*</exclude>
                                    <exclude>javax.*:*</exclude>
                                    <exclude>com.vividsolutions:*</exclude>
                                    <exclude>commons*:*</exclude>
                                    <exclude>net.java.dev:*</exclude>
                                    <exclude>java3d:*</exclude>
                                    <exclude>net.jcip:*</exclude>
                                    <exclude>c3p0:*</exclude>
                                    <exclude>net.sf.ehcache:*</exclude>
                                    <exclude>jdom:*</exclude>
                                    <exclude>net.java.dev.jsr-275:*</exclude>
                                </excludes>
                            </artifactSet>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer" />
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
           </plugin>
        </plugins>
    </build>

</project>
